---
import { ViewTransitions } from "astro:transitions";
import SortButtons from "../components/SortButtons";
import WebSiteSchema from "../components/schema/WebSiteSchema.astro";

export interface Props {
    site: string;
    title: string;
    tagline: string;
    pageTitle?: string;
    pageDescription?: string;
    canonicalUrl?: string;
    ogTitle?: string;
    ogDescription?: string;
    ogImage?: string;
    ogUrl?: string;
    ogType?: string;
    ogSiteName?: string;
    twitterCard?: string;
    twitterTitle?: string;
    twitterDescription?: string;
    twitterImage?: string;
    pageFavicon?: string;
}

const {
    site,
    title,
    tagline,
    pageTitle,
    pageDescription,
    canonicalUrl,
    ogTitle,
    ogDescription,
    ogImage,
    ogUrl,
    ogType,
    ogSiteName,
    twitterCard,
    twitterTitle,
    twitterDescription,
    twitterImage,
    pageFavicon,
} = Astro.props;
---

<!doctype html>
<html lang="en" data-new-ui-theme="light--warm">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/svg+xml"
            href={pageFavicon || "/rise-of-machine.svg"}
        />
        <meta name="generator" content={Astro.generator} />
        <title>
            {
                pageTitle
                    ? `${pageTitle} | Rise of Machine`
                    : `${site} — AI tools curated by autonomous AI agents for makers and SMBs.`
            }
        </title>
        <meta name="author" content="@planetabhi" />
        <meta
            name="description"
            content={pageDescription ||
                "AI tools curated by autonomous AI agents for makers and SMBs."}
        />
        <link rel="sitemap" href="/sitemap-index.xml" />
        {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
        {ogTitle && <meta property="og:title" content={ogTitle} />}
        {ogType && <meta property="og:type" content={ogType} />}
        {
            ogDescription && (
                <meta property="og:description" content={ogDescription} />
            )
        }
        {ogImage && <meta property="og:image" content={ogImage} />}
        {ogUrl && <meta property="og:url" content={ogUrl} />}
        {ogSiteName && <meta property="og:site_name" content={ogSiteName} />}
        {twitterCard && <meta name="twitter:card" content={twitterCard} />}
        {twitterTitle && <meta name="twitter:title" content={twitterTitle} />}
        {
            twitterDescription && (
                <meta name="twitter:description" content={twitterDescription} />
            )
        }
        {twitterImage && <meta name="twitter:image" content={twitterImage} />}

        <!-- Google tag (gtag.js) -->
        <script
            type="text/partytown"
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-S08Z38BTMJ"
        ></script>
        <script type="text/partytown">
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                window.dataLayer.push(arguments);
            }
            gtag("js", new Date());

            gtag("config", "G-S08Z38BTMJ");
        </script>
        <ViewTransitions />
        <WebSiteSchema />
    </head>

    <body>
        <div class="floating-nav" aria-label="main navigation">
            <div class="left-group">
                <div class="logo">
                    <a href="/" aria-label="home page" tabindex="-1"
                        ><img
                            src="/rise-of-machine.svg"
                            width="32"
                            height="32"
                            alt="Rise of Machine"
                            aria-hidden="true"
                        /></a
                    >
                </div>
                <button
                    class="theme-toggle"
                    id="theme-toggle"
                    title="Toggles light & dark"
                    aria-label="auto"
                    aria-live="polite"
                >
                    <!-- Light icon -->
                    <svg
                        class="icon-light"
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        fill="none"
                        viewBox="0 0 24 24"
                        ><g clip-path="url(#a)"
                            ><path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-miterlimit="10"
                                stroke-width="1"
                                d="M5 12H1m22 0h-4M7.05 7.05 4.222 4.222m15.556 15.556L16.95 16.95m-9.9 0-2.828 2.828M19.778 4.222 16.95 7.05M12 19v4m0-22v4m4 7a4 4 0 1 1-8 0 4 4 0 0 1 8 0"
                            ></path></g
                        ><defs
                            ><clipPath id="a"
                                ><path fill="#fff" d="M0 0h24v24H0z"
                                ></path></clipPath
                            ></defs
                        ></svg
                    >

                    <!-- Dark icon -->
                    <svg
                        class="icon-dark"
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        fill="none"
                        viewBox="0 0 24 24"
                        ><path
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1"
                            d="M10.41 13.28C7.332 10.205 6.716 5.693 8.357 2c-1.23.41-2.256 1.23-3.281 2.256a10.4 10.4 0 0 0 0 14.768c4.102 4.102 10.46 3.897 14.562-.205 1.026-1.026 1.846-2.051 2.256-3.282-3.896 1.436-8.409.82-11.486-2.256"
                        ></path></svg
                    >
                </button>
            </div>
            <div class="btn-group">
                <SortButtons
                    client:load
                    onSortChange={() => {}}
                    onRandomSeed={() => {}}
                />
                <a
                    href="https://github.com/NewDesignFile/template-directory/issues"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="submit-btn"
                    tabindex="0">Submit a tool</a
                >
            </div>
        </div>

        <header class="nu-u-mb-10 nu-u-mt-10">
            <div class="container">
                <h1
                    class="nu-c-h5 nu-u-text--primary nu-u-mt-0 nu-u-mb-2 title"
                >
                    {title}
                </h1>
                <p class="nu-c-fs-small nu-u-text--secondary description-text">
                    {tagline}
                </p>
            </div>
        </header>
        <slot />

        <div class="footer">
            <p>
                ABHIMANYU RANA 2025 © <br />
                <a
                    href="https://planetabhi.com/"
                    class="nu-u-link--subtle"
                    target="_blank"
                    rel="noopener noreferrer">@planetabhi</a
                >
            </p>
        </div>
    </body>
</html>
<style is:global>
