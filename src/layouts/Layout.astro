        font-family: "ROM-Regular";
        src: url("/woffs/ROM-Regular.woff2") format("woff2");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "ROM-Bold";
        src: url("/woffs/ROM-Bold.woff2") format("woff2");
        font-weight: bold;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "ROM-Mono";
        src: url("/woffs/ROM-Mono.woff2") format("woff2");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    :root {
        --accent: var(--link);
        --body-copy: "ROM-Regular", var(--system-ui);
        --monospace: "ROM-Mono", var(--monospace-code);
        --body-strong: "ROM-Bold", var(--system-ui);
        font-synthesis: none;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
